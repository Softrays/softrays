  <body>
    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
      <div class="d-flex align-items-center justify-content-between">
        <a href="/" class="logo d-flex align-items-center">
          <!-- <img src="../assets/img/logo.png" alt="" /> -->
          <span>SOFTRAYS</span>
        </a>
        <i class="bi bi-list toggle-sidebar-btn"></i>
      </div>
      <!-- End Logo -->

      <nav class="header-nav ms-auto">
        <ul class="d-flex align-items-center">
          <li class="nav-item d-block d-lg-none">
            <a class="nav-link nav-icon search-bar-toggle" href="#">
              <i class="bi bi-search"></i>
            </a>
          </li>
          <!-- End Search Icon-->

          <li class="nav-item dropdown pe-3">
            <a
              class="nav-link nav-profile d-flex align-items-center pe-0"
              href="#"
              data-bs-toggle="dropdown"
            >
              <img
                src="/passport/<%= profile.image %>"
                alt="Profile"
                class="rounded-circle"
              />
              <span class="d-none d-md-block dropdown-toggle ps-2"
                ><%= profile.fullName %></span
              > </a
            ><!-- End Profile Iamge Icon -->

            <ul
              class="
                dropdown-menu dropdown-menu-end dropdown-menu-arrow
                profile
              "
            >
              <li class="dropdown-header">
                <h6><%= profile.fullName %></h6>
                <span><%= profile.email %></span>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>

              <li>
                <a
                  class="dropdown-item d-flex align-items-center"
                  href="/admin/profile"
                >
                  <i class="bi bi-person"></i>
                  <span>My Profile</span>
                </a>
              </li>
              <li>
                <hr class="dropdown-divider" />
              </li>
              <li>
                <a
                  class="dropdown-item d-flex align-items-center"
                  href="/admin/logout"
                >
                  <i class="bi bi-box-arrow-right"></i>
                  <span>Sign Out</span>
                </a>
              </li>
            </ul>
            <!-- End Profile Dropdown Items -->
          </li>
          <!-- End Profile Nav -->
        </ul>
      </nav>
      <!-- End Icons Navigation -->
    </header>
    <!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">
      <ul class="sidebar-nav" id="sidebar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/admin/dashboard">
            <i class="bi bi-grid"></i>
            <span>Dashboard</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link collapsed" href="/admin/profile">
            <i class="bi bi-person"></i>
            <span>Profile</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link collapsed" href="/admin/registered-student">
            <i class="bi bi-people-fill"></i>
            <span>Registered Students</span>
          </a>
        </li>
        <!-- <li class="nav-item">
          <a class="nav-link collapsed" href="/admin/upload-certificate">
            <i class="bi bi-upload"></i>
            <span>Upload Certificate</span>
          </a>
        </li> -->
        <li class="nav-item">
          <a class="nav-link collapsed" href="/admin/logout">
            <i class="bi bi-box-arrow-in-right"></i>
            <span>Logout</span>
          </a>
        </li>
        <!-- End Dashboard Nav -->
      </ul>
    </aside>
    <!-- End Sidebar-->

    <main id="main" class="main">
      <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
          </ol>
        </nav>
      </div>
      <!-- End Page Title -->

      <section class="section dashboard">
        <div class="row">
          <!-- Left side columns -->
          <div class="col-lg-12">
            <div class="row">
              <!-- Sales Card -->
              <div class="col-xxl-4">
                <div class="card info-card sales-card">
                  <div class="card-body">
                    <h5 class="card-title">Full Name</h5>

                    <div class="d-flex align-items-center">
                      <div
                        class="
                          card-icon
                          rounded-circle
                          d-flex
                          align-items-center
                          justify-content-center
                        "
                      >
                        <i class="bi bi-person-fill"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%= profile.fullName %></h6>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <small
                    style="padding: 0 20px 10px; color: rgb(167, 167, 167)"
                  >
                    <i class="bi bi-clock"></i> &nbsp; Registered on <%=
                    moment(profile.date).format(date) %></small
                  >
                </div>
              </div>
              <!-- End Sales Card -->

              <!-- Revenue Card -->
              <div class="col-xxl-4 col-md-6">
                <div class="card info-card revenue-card">
                  <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>

                    <div class="d-flex align-items-center">
                      <div
                        class="
                          card-icon
                          rounded-circle
                          d-flex
                          align-items-center
                          justify-content-center
                        "
                      >
                        <i class="bi bi-currency-dollar"></i>
                      </div>
                      <% amount = [] %> <% students.map(student => { %> <%
                      if(student.reference.status == 'success') { %> <%
                      amount.push(student.price) %> <% } %> <% }) %> <%
                      totalAmount = amount.reduce((a, b) => a + b, 0) %>
                      <div class="ps-3">
                        <h6>N<%= numeral(totalAmount).format('0,0.00') %></h6>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <small
                    style="padding: 0 20px 10px; color: rgb(167, 167, 167)"
                  >
                    <i class="bi bi-clock"></i> &nbsp; For Registed
                    Students</small
                  >
                </div>
              </div>
              <!-- End Revenue Card -->

              <!-- Customers Card -->
              <div class="col-xxl-4 col-md-6">
                <div class="card info-card customers-card">
                  <div class="card-body">
                    <h5 class="card-title">
                      Total Number of Registered Students
                    </h5>

                    <div class="d-flex align-items-center">
                      <div
                        class="
                          card-icon
                          rounded-circle
                          d-flex
                          align-items-center
                          justify-content-center
                        "
                      >
                        <i class="bi bi-people"></i>
                      </div>
                      <div class="ps-3">
                        <h6><%= students.length %></h6>
                      </div>
                    </div>
                  </div>
                  <hr />
                  <small
                    style="padding: 0 20px 10px; color: rgb(167, 167, 167)"
                  >
                    <i class="bi bi-clock"></i> &nbsp; Just Updated</small
                  >
                </div>
              </div>
              <!-- End Customers Card -->
            </div>
          </div>
          <!-- End Left side columns -->
        </div>
      </section>

      <%- include("../partials/messages") %>

      <section class="section">
        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="card-body">
                <h5 class="card-title">Registered Admins</h5>

                <!-- Table with stripped rows -->
                <div class="table-responsive">
                  <table class="table table-bordered text-center">
                    <thead>
                      <tr>
                        <th scope="col">Avatar</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Verification Status</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <% admins.map(admin => { %>
                    <tbody>
                      <form method="post">
                        <tr>
                          <td>
                            <img
                              src="/passport/<%= admin.image %>"
                              alt=""
                              style="width: 30px; height: auto"
                            />
                          </td>
                          <td><%= admin.fullName%></td>
                          <td><%= admin.email%></td>
                          <td><%= admin.address%></td>
                          <td><%= admin.phoneNumber %></td>
                          <% if(admin.admin == false) { %>
                          <td>
                            Not Verified &nbsp;
                            <i class="bi bi-x-circle-fill text-danger"></i>
                          </td>

                          <% } else { %>
                          <td>
                            Verified &nbsp;
                            <i class="bi bi-check-circle-fill text-success"></i>
                          </td>
                          <% } %> <% if(admin.email == "admin@softraysit.com") {
                          %>
                          <td>Master Admin</td>
                          <% } else { %> <% if(admin.admin == true) { %>
                          <td>
                            <button
                              onclick="if(confirm('Are you sure you want to delete this admin?')){}else{return false;};"
                              title="Delete admin"
                              formaction="/admin/delete"
                              style="
                                border: none;
                                cursor: pointer;
                                background-color: transparent;
                              "
                              type="submit"
                              name="itemId"
                              value="<%= admin._id %>"
                            >
                              <i
                                class="bi bi-trash-fill text-danger"
                                style="font-size: 120%"
                              >
                              </i>
                            </button>
                          </td>
                          <% } else { %>
                          <td>
                            <button
                              formaction="/admin/verify"
                              onclick="if(confirm('Are you sure you want to verify this admin?')){}else{return false;};"
                              title="Verify Admin"
                              type="submit"
                              style="
                                border: none;
                                margin-right: 10px;
                                cursor: pointer;
                                background-color: transparent;
                              "
                              name="itemId"
                              value="<%= admin._id %>"
                            >
                              <i
                                class="bi bi-check-circle-fill text-success"
                                style="font-size: 120%"
                              ></i>
                            </button>
                            <button
                              onclick="if(confirm('Are you sure you want to delete this admin?')){}else{return false;};"
                              title="Delete admin"
                              formaction="/admin/delete"
                              style="
                                border: none;
                                cursor: pointer;
                                background-color: transparent;
                              "
                              type="submit"
                              name="itemId"
                              value="<%= admin._id %>"
                            >
                              <i
                                class="bi bi-trash-fill text-danger"
                                style="font-size: 120%"
                              >
                              </i>
                            </button>
                          </td>
                          <% } %> <% } %>
                        </tr>
                      </form>
                    </tbody>
                    <% })%>
                  </table>
                </div>
                <!-- End Table with stripped rows -->
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
    <!-- End #main -->

